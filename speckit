#!/usr/bin/env python3
"""
Spec-Kit Workflow Automation CLI

Run the spec-kit automation script from the project root:
    ./speckit discover
    ./speckit run 17
    ./speckit run-all
"""

import sys
from pathlib import Path

# Add the .specify/scripts directory to the path
script_dir = Path(__file__).parent / ".specify" / "scripts"
sys.path.insert(0, str(script_dir))

from python.main import main

if __name__ == "__main__":
    main()
